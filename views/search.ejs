<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Search page</title>
    
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/myStyle.css">
    <link href="/css/sidebars.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  </head>
  <body>
    <%- include('./components/icons.ejs') %>

    <main class="d-flex flex-nowrap">

      <%- include('./components/sidebar.ejs', {current_page: "search"}) %>

      <section class="w-100" style="overflow: auto;">
        <%- include('./components/navbar.ejs') %>

        <section class="body w-100 p-5">
          <% if (users.length === 0) { %>
            <h1 class="d-flex justify-content-center">No data found for "<%=  searchText %>"</h1>
          <% } else { %>
          <table class="table table-striped table-bordered text-center">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Gender</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user, idx) => { %>
                
              
              <tr>
                <th scope="row"><%= idx + 1 %></th>
                <td><%= user.firstName %> <%= user.lastName %></td>
                <td><%= user.gender %></td>
                <td><%= user.email %></td>
                <td class="icons">
                  <a href="/view/<%= user._id %>" type="button" class="btn btn-primary">
                    <i class="bi bi-eye"></i>
                  </a>
                  <a href="/edit/<%= user._id %>" type="button" class="btn btn-primary">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>

                </td>
              </tr>
              <% })}; %>
            </tbody>
          </table>
        </section>
      </section>

    </main>
    
    <script src="/js/main.js"></script>
    <script src="/js/color-modes.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sidebars.js"></script>
  </body>
</html>
